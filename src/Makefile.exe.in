all: $(TARGET)

FIXED_FLAGS := -std=f2008 -Wall -Wextra -Werror -pedantic -Wno-unused-label -Wno-character-truncation -Wno-unused-dummy-argument -Wno-maybe-uninitialized -Wno-do-subscript -Wno-compare-reals -Wno-unused-parameter -ffree-line-length-3000

$(TARGET): $(MODOBJECTS) $(OBJECTS) $(LIBRARIES)
	gfortran $(FIXED_FLAGS) $(FFLAGS) -Jmod -o $(TARGET) $^

obj/%.o: src/%.f90 $(MODOBJECTS)
	@mkdir -p mod obj
	gfortran $(FIXED_FLAGS) $(FFLAGS) -Jmod -c $(INCLUDES) -o $@ $<

../../lib/libeqlib.a:
	+make -C ../eqlib

../../lib/libeqlibu.a:
	+make -C ../eqlibu

../../lib/libeqlibg.a:
	+make -C ../eqlibg

clean:
	@rm -rf obj mod

.PHONY: clean
