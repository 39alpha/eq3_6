all: $(TARGET)

$(TARGET): $(OBJECTS)
	ar rsc $(TARGET) $^

obj/%.o: src/%.f90
	@mkdir -p obj
	gfortran -Wall -Wextra -Werror -pedantic -Wno-conversion -Wno-unused-variable -Wno-unused-label -Wno-character-truncation -Wno-unused-dummy-argument -Wno-maybe-uninitialized -Wno-do-subscript -Wno-compare-reals -Wno-unused-parameter $(FFLAGS) $(INCLUDES) -c -o $@ $^

clean:
	@rm -rf obj

.PHONY: clean
